{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "react-native",
        "plugin:prettier/recommended",
        "prettier",
        "prettier/babel",
        "prettier/react",
        "prettier/prettier",
        "prettier/standard"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "allowImportExportEverywhere": false,
        "ecmaFeatures": {
            "arrowFunctions": true,
            "modules": true,
            "globalReturn": false
        }
    },
    "plugins": ["react", "prettier", "import", "jsx-a11y", "react-hooks"],
    "settings": {
        "undef/ignore": true,
        "import/ignore": ["react-native"]
    }
}
